@using StackOverflowClone.Models
@model dynamic
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div id="mainbar">
        <div class="subheader">
            <h1 id="h-top-questions">@Model.Header</h1>
        </div>
        <div id="question-mini-list">
            @if (Model == null)
            {
                <p>No questions have been asked.</p>
            }
            else
            {
                Html.RenderPartial("_QuestionList", (IEnumerable<Question>) Model.Questions);
            }
        </div>
    </div>
        
    <div id="sidebar">
    </div>
</div>